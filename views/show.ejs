<% include ./partials/header %>
<div id="one" class="main text container segment">
    <div class="ui huge header centered"><%= data.title %></div>
    <div class="ui top attched segment">
        <div class="item">
                <img class="ui centered rounded medium image" src="<%= data.image %>">
                <div class="content left" >
                    <span><%= data.created.toDateString() %></span>
                </div>
                
                <div id="desc" class="description">
                        <p style="font: 400 25px/1.3 'Lobster Two', Helvetica, sans-serif;color: #2b2b2b;text-shadow: 1px 1px 0px #ededed, 4px 4px 0px rgba(0,0,0,0.15);"><%- data.body %></p>
                </div>
                <a class="ui orange basic button" href="/blogs/<%= data._id %>/edit">Edit</a>
                <form id="delete" class="ui form" action="/blogs/<%= data._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
                </form>
                
                    
        </div>
    </div>
   
</div>

<% include ./partials/footer %>